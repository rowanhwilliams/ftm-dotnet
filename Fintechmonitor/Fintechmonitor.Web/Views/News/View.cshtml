@model Fintechmonitor.Web.Models.NewsItemViewModel
@{
    ViewBag.Title = Model.Headline;
}

<div class="panel-heading">
    <h4 class="panel-title">@Model.Headline</h4>
</div>
<div class="panel-body">
    <h4>@Model.DateTime.ToLongDateString() | @Model.Type</h4>
    <br />
    <p>@Html.Raw(Model.BodyFormatted)</p>
</div>



